@import "nib"

body
    background: #222
    margin: 0
    padding: 0

#main
    background: #111
    position: absolute

#game
    display: inline-block

#ui
    background: blue
    z-index: 1

    .preloader
        position: absolute
        width: 100%
        height: 100%
        background: black

        .border
        .bar
            background: #111
            position: absolute
            top: 50%
            left: 10px
            right: 10px
            height: 3px
            border: 1px solid rgba(white, 0.12)
            margin-top: -15px
            border-radius: 3px

        .bar
            background-color: white
            border-color: transparent
            box-shadow: 0 0 10px 1px #33aaa3
            z-index: 1
            transition: 600ms
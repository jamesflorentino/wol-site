doctype 5
html
    head
        title Wings Of Lemuria
        link(rel='stylesheet', href='/stylesheets/game.css')
        meta(name='apple-mobile-web-app-capable', content='yes')
        meta(name='apple-mobile-web-app-status-bar-style', content='black-translucent')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
        link(rel="apple-touch-icon", href="/images/touch-icon.png")
        link(rel="apple-touch-icon", sizes="144x144", href="/images/icon_144x144.png")
        link(rel="apple-touch-icon", sizes="114x114", href="/images/icon_114x114.png")
        link(rel="apple-touch-icon", sizes="96x96", href="/images/icon_96x96.png")
        link(rel="apple-touch-icon", sizes="72x72", href="/images/icon_72x72.png")
        link(rel="apple-touch-icon", sizes="58x58", href="/images/icon_58x58.png")
        link(rel="apple-touch-icon", sizes="57x57", href="/images/icon_57x57.png")
        link(rel="apple-touch-icon", sizes="48x48", href="/images/icon_48x48.png")
        link(href="images/apple-touch-startup-image-640x920.png", rel="apple-touch-startup-image")
        link(href='http://fonts.googleapis.com/css?family=Droid+Sans+Mono|Orbitron:400|Titillium+Web:700', rel='stylesheet', type='text/css')
        block scripts
    body
        #add-to-homescreen.hidden Add this to your homescreen by touching the share icon below and click "add to homescreen"!
        #mobile-message Please tilt your device to landscape mode to play the game.
        #main
            #ui
                #victory-message
                    a.find.game(href='/game') Player another game
                    .logo.sprite.victory_message_logo
                    .message You are victorious!
                #modal-message.sprite.message_log_container
                    .log-container
                        ul.logs
                #preloader
                    .border
                        .bar
                    .top.sprite.preloader_bg_top
                    .bottom.sprite.preloader_bg_bottom
                #players.hidden
                    .center
                    .sprite.players_bg
                        .left
                            i.sprite.player_red
                            span.name Player
                        .right
                            i.sprite.player_yellow
                            span.name You
                #settings
                    i.sprite.sound-icon
                #turn-list.hidden
                    ul
                #unit-actions.unit-active.hidden
                    .title Active Unit
                    .sprite.unit_turn_bg
                        .avatar
                        .actions
                            .title Actions
                            .bars
                                .bar
                                .bar
                                .bar
                        .commands
                            .move.command.sprite.btn_primary
                                i.btn_primary_hover.sprite
                                span Act
                            .reinforce.command.sprite.btn_primary
                                i.btn_primary_hover.sprite
                                span Units
                            .skip.command.sprite.btn_cancel
                                i.btn_cancel_hover.sprite
                                span Skip
            #game
